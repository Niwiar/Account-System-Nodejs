<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Creative</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <link href="./css/style.css" rel="stylesheet">
</head>
<body>

    <div class="container py-5" style="max-width: 540px" >
        <div class="card mb-1 text-center">
            <div class="row g-0 justify-content-center">
                <div class="col-md-6" >
                    <img src="<%=avatar_url %>" class="avatar card-img-top mt-3">
                    <h2 class="mt-2">ID: <%=id %></h2>
                    <form action="/uploadavatar" enctype="multipart/form-data" method="post" class="row g-1 justify-content-center">
                        <input style="max-width: 200px"  class="form-control form-control-sm" type="file" name="_avatar">
                        <button style="max-width: 150px" type="submit" class="btn btn-outline-secondary mt-1 p-1">Change Avatar</button>
                        <% if (locals.avatar_error) {
                            avatar_error.forEach(function(error_msg) { %>
                            <div class="alert alert-danger" role="alert"><%= error_msg %></div>
                        <% })
                    } %>
                    </form>
                    <form action="/refresh" method="get" class="row g-1 justify-content-center">
                        <button style="max-width: 150px" type="submit" class="btn btn-outline-secondary mt-1 p-1">Refresh Token</button>
                    </form>
                </div>
                <div class="col-md-6">
                    <div class="card-body">
                        <form action="/edit" method="post">
                            <h3 class="ml-3">Hello, <%=username %> </h3>
                            <div class="form-floating mb-2">
                                <input type="text" name="user_name" class="form-control" id="_name" placeholder="" value="<%=username %>">
                                <label for="_name">Username</label>
                            </div>
                            <div class="form-floating mb-2">
                                <input type="email" name="show_email" class="form-control" id="_semail" placeholder="name@example.com" value="<%=email %>" disabled>
                                <label for="_email">Email address</label>
                                <input type="hidden" name="user_email" class="form-control" id="_email" value="<%=email %>">
                            </div>
                            <div class="form-floating mb-2">
                                <input type="password" name="user_pass" class="form-control" id="_pass" placeholder="Password" value="">
                                <label for="_pass">Password</label>
                            </div>
                            <div class="form-floating mb-2">
                                <input type="text" name="token" class="form-control" id="token1" placeholder="BEARER TOKEN" value="">
                                <label for="token1">Bearer Token</label>
                            </div>
                            <% if (locals.edit_error) {
                                edit_error.forEach(function(error_msg) { %>
                                <div class="alert alert-danger" role="alert"><%= error_msg %></div>
                            <% })
                        } %>
                            <button type="submit" class="btn btn-warning">Edit Account</button>
                            <a href="/logout" class="btn btn-danger">Logout</a>
                        </form>
                        <form action="/delete" method="post">
                            <div class="form-floating mb-2">
                                <input type="text" name="token" class="form-control" id="token2" placeholder="BEARER TOKEN" value="">
                                <label for="token2">Bearer Token</label>
                            </div>
                            <button type="submit" class="btn btn-dark mt-2">Delete Account</button>
                        </form>
                        <form action="/admin" method="get">
                            <div class="form-floating mb-2">
                                <input type="text" name="token" class="form-control" id="token3" placeholder="BEARER TOKEN" value="">
                                <label for="token3">Bearer Token</label>
                            </div>
                            <button type="submit" class="btn btn-dark mt-2">User list</button>
                        </form>
                    </div>
                </div>
            </div>
        
            
        </div>
    </div>
    
    
    <!-- Bootstrap JavaScript with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <script src="/js/script.js"></script>
</body>
</html>